#use "topfind";;
#directory "_build";;
#load_rec "m.cmo";;
open M;;
(* Added by OPAM. *)
let () =
  try Topdirs.dir_directory (Sys.getenv "OCAML_TOPLEVEL_PATH")
  with Not_found -> ()
;;
let () = Toploop.add_directive "reload"
    (Directive_none (fun () -> Unix.execvp "utop" [||]))
    { section="My Directives"
    ; doc="Quit and reload utop"};;

